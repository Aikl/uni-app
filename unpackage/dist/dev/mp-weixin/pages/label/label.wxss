page {
  font-size: 14px;
  background-color: #F5F5F5;
  height: 100%;
  width: 100%;
}
.label {
  height: 100%;
  width: 100%;
}
.label .label-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0px 0 10px 10px;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.label .label-content__item {
  padding: 2px 5px;
  margin-top: 10px;
  margin-right: 10px;
  -webkit-border-radius: 4px;
          border-radius: 4px;
  border: 1px solid #f5f5f5;
  position: relative;
}
.label .label-content__item .close-icons {
  position: absolute;
  right: -8px;
  top: -6px;
  background-color: #fff;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.label .label-box {
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.label .label-box .label-header {
  border-bottom: 1px solid #f5f5f5;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 10px;
}
.label .label-box .label-header__title {
  color: #666;
}
.label .label-box .label-header__edit {
  color: #007AFF;
}
.label .label-recommend {
  margin-top: 10px;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.label .label-recommend__title {
  color: #f03737;
  padding: 10px;
  border-bottom: 1px solid #f5f5f5;
}
.empty-box {
  height: 50px;
  line-height: 50px;
  width: 100%;
  text-align: center;
  color: #999;
}

